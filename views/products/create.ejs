<!DOCTYPE html>
<html lang="en">

    <!-- HEAD  -->
    <%- include('../partials/head') %>

        <body>
            <!-- HEADER  -->
            <%- include('../partials/headerForm') %>

                <main>
                    <div class="register">
                        <div class="register-title">
                            <h1>Crear Producto</h1>
                        </div>
                        <form action="/products" method="POST" enctype="multipart/form-data">
                            <ul class="errorList"></ul>
                            <div class="register-container">
                                <label for="brand_id">Marca</label>
                                <select name="brand_id" id="" class="text-input">
                                    <option value="" disabled selected>- Marca - </option>
                                    <% brands.forEach(brand=> { %>
                                        <option value="<%= brand.id %>">
                                            <%= brand.name %>
                                        </option>
                                        <% }); %>
                                </select>                  
                                <label for="category_id">Tipo</label>
                                <select name="category_id" id="tipo" class="text-input" >
                                    <option value="" disabled selected>- Tipo - </option>
                                    <% categories.forEach(category=> { %>
                                        <option value="<%= category.id %>">
                                            <%= category.name %>
                                        </option>
                                        <% }); %>
                                </select>
                                <% if(locals.errors && errors.brand_id) { %>
                                    <div class="mensajeError">
                                        <h4><%= errors.brand_id.msg %></h4>
                                    </div>
                                <% } %>
                                <% if(locals.errors && errors.category_id) { %>
                                    <div class="mensajeError">
                                        <h4><%= errors.category_id.msg %></h4>
                                    </div>
                                <% } %>
                            </div>
                            <div class="register-container">
                                <label for="model">Modelo</label>
                                <input type="text" name="model" id="modelo" class="text-input" />
                                <% if(locals.errors && errors.model) { %>
                                    <div class="mensajeError">
                                        <h4><%= errors.model.msg %></h4>
                                    </div>
                                <% } %>
                            </div>
                            <div class="register-container">
                                <label for="price">Precio</label>
                                <input type="text" name="price" id="price" class="text-input" />
                                <% if(locals.errors && errors.price) { %>
                                    <div class="mensajeError">
                                        <h4><%= errors.price.msg %></h4>
                                    </div>
                                <% } %>
                            </div>

                            <div class="register-container">
                                <label for="description">Descripci√≥n</label>
                                <input type="text" name="description" id="description" class="text-input"  />
                                <% if(locals.errors && errors.description) { %>
                                    <div class="mensajeError">
                                        <h4><%= errors.description.msg %></h4>
                                    </div>
                                <% } %>
                            </div>

                            <div>
                                <label for="offer">Oferta</label>
                                <input type="checkbox" name="offer" id="offers">
                                <label for="popular">Destacado</label>
                                <input type="checkbox" name="popular" id="popular">
                            </div>

                            <div class="register-container">
                                <label for="image">Imagen</label>
                                <input type="file" name="image" id="imagenProducto" />
                                <% if(locals.errors && errors.image) { %>
                                    <div class="mensajeError">
                                        <h4><%= errors.image.msg %></h4>
                                    </div>
                                <% } %>
                            </div>

                            <div class="btns-container">
                                <button type="submit" class="btn-crud">
                                    CREAR
                                </button>
                                <button type="reset" class="btn-crud">
                                    DESCARTAR
                                </button>
                            </div>
                        </form>

                    </div>
                    </div>
                </main>
                <!-- FOOTER -->
                <%- include('../partials/footer') %>

                    <script src="/js/productCreateValidation.js"></script>
        </body>

</html>