<!DOCTYPE html>
<html lang="en">

    <!-- HEAD  -->
    <%- include('../partials/head') %>

        <body>
            <!-- HEADER  -->
            <%- include('../partials/headerForm') %>

                <main>
                    <div class="register">
                        <div class="register-title">
                            <h1>Crear Producto</h1>
                        </div>
                        <form action="/products/list" method="POST" enctype="multipart/form-data">
                            <div class="register-container">
                                <label for="brand">Marca</label>
                                <input type="text" name="brand" id="marca" class="text-input" required />
                                <!-- <span>
                        <i class="fa fa-user-circle form-icons"></i>
                    </span> -->
                            </div>

                            <div class="register-container">
                                <label for="model">Modelo</label>
                                <input type="text" name="model" id="modelo" class="text-input" required />
                            </div>

                            <div class="register-container">
                                <label for="type">Tipo</label>
                                <input type="text" name="type" id="tipo" class="text-input" required />
                            </div>

                            <div class="register-container">
                                <label for="price">Precio</label>
                                <input type="text" name="price" id="price" class="text-input" required />
                            </div>

                            <div class="register-container">
                                <label for="description">Descripci√≥n</label>
                                <input type="text" name="description" id="description" class="text-input" required />
                            </div>

                            <div>
                                <label for="offer">Oferta</label>
                                <input type="checkbox" name="offer" id="offer" >
                                <label for="popular">Destacado</label>
                                <input type="checkbox" name="popular" id="popular">
                            </div>

                            <div class="register-container">
                                <label for="image">Imagen</label>
                                <input type="file" name="image" id="imagenProducto" />
                            </div>

                            <div class="btns-container">
                                <button type="submit" class="btn-crud">
                                    CREAR
                                </button>
                                <button type="reset"class="btn-crud">
                                    DESCARTAR
                                </button>
                            </div>
                        </form>

                    </div>
                    </div>
                </main>
                <!-- FOOTER -->
                <%- include('../partials/footer') %>

                    <script src="/js/show_hide_pw.js"></script>
        </body>

</html>