<!DOCTYPE html>
<html lang="en">
<!-- HEAD  -->
<%- include('../partials/head') %>
  <body>
    <!-- HEADER -->
    <%- include('../partials/header') %>
    <div class="backbtn-modifier">
      <%- include('../partials/backbtn.ejs') %>
    </div>
        <section>
          <div class="articulo">
            <img id="producto" src="/img/product-detail/<%=product.image%>"/>
          </div>
          <div class="especificaciones">
            <p class="modelo">
              <%= `${product.brands.name} ${product.model}` %>
            </p>
            <!-- <p>ESPECIFICACIONES:</p> -->
            <p class="brand" value="<%= product.brands.name %>">Marca: <%= product.brands.name %>
            </p>
            <p class="model" value="<%= product.model %>">Modelo: <%= product.model %>
            </p>
            <p class="priceCart" value="<%= product.price %>">$<%= product.price %>
            </p>
            <p>
              <%= `12 cuotas de $${(product.price / 12).toFixed(2)}` %>
            </p>

            <p class="description">DESCRIPCIÃ“N:</br>
              <%= product.description %></p>
            <button class="btn-agregar" id="add-product" value="<%= product.id %>">Agregar al carrito</button>

            <% if(locals.userLogged && locals.userLogged.user_profile_id == 2) { %>
            <a href="/products/edit/<%=product.id%>">
            <button class="btn-edit" type="submit">Editar</button>
            </a>
            <form action="/products/delete/<%=product.id%>?_method=delete" method="POST">
            <button class="btn-delete" id="eliminar" type="submit">Eliminar</button>
            </form>
            <% } %>
          </div>

          </div>
        </section>
        <!-- FOOTER -->
        <%- include('../partials/footer') %>
    <script src="/js/shop-cart.js"></script>
        
  </body>

</html>