<!DOCTYPE html>
<html lang="en">

<!-- HEAD  -->
<%- include('../partials/head') %>

  <body>
    <!-- HEADER -->
    <%- include('../partials/header') %>

      <section>
        <div class="titulo">
          <h2>
            <%= productList[0].type.toUpperCase() %>
          </h2>
        </div>

        <div class="articulo">
          <% for(let i=0; i < productList.length; i++){ %>
            <a href="/products/details/<%= productList[i].id %> ">
              <h4>
                <%= `${productList[i].brand} ${productList[i].model} `%>
              </h4>
            </a>
            <p class="ps-text-grey">
              <img src="<%= productList[i].image %>" alt="">
              $<%= productList[i].price %>
            </p>
            <a href="/../products/cart"><button id="agregar" type="submit">Agregar al carrito</button></a>
            <% } %>
        </div>

        </div>

      </section>

      <!-- FOOTER -->
      <%- include('../partials/footer') %>

  </body>

</html>